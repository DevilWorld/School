@model IEnumerable<SchoolPortal.Domain.Models.Person>

@*@{
        ViewBag.Title = "GetAllStudents";
    }*@

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Test Page</title>



    <script src="//ajax.googleapis.com/ajax/libs/angularjs/1.0.7/angular.min.js"></script>
    <script type="text/javascript" src="~/Scripts/Students/StudentModule.js"></script>
    <script type="text/javascript" src="~/Scripts/Students/StudentService.js"></script>
    <script type="text/javascript" src="~/Scripts/Students/StudentController.js"></script>
    <h2>GetAllStudents</h2>
</head>
<body>
    @Html.ActionLink("Add Student", "AddStudent", "Student")
    <div ng-app="studentModule">
        <div ng-controller="studentController">
            <table>
                <tr ng-repeat="student in students">
                    <td>{{student.personId}}</td>
                    <td>{{student.firstName}}</td>
                    <td>{{student.lastName}}</td>
                    <td>{{student.middleName}}</td>
                    <td>{{student.sexName}}</td>
                    <td>{{student.dob}}</td>
                </tr>
            </table>
        </div>
    </div>
</body>
</html>