@model SchoolPortal.Models.LoginViewModel
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>
<form method="post" action="/Home/Login/">
    <div class="panel panel-info login-panel-center">
        <div class="panel-heading">Login</div>
        <div class="panel-body form-group">
            <div class="login-control">
                @Html.ValidationMessageFor(v=>v.UserId, "", new { @class = "text-danger" })
                @Html.EditorFor(m => m.UserId, new {
                           htmlAttributes = new {
                               @class = "form-control",
                               @placeholder = Html.DisplayNameFor(m => m.UserId)
                            }
                })
            </div>
            <div class="login-control">
                @Html.ValidationMessageFor(v => v.Password, "", new { @class = "text-danger"})
                @Html.EditorFor(m => m.Password, new {
                           htmlAttributes = new {
                               @class = "form-control",
                               @placeholder = Html.DisplayNameFor(m => m.Password), @type = "password"
                           }
                })
            </div>
            <div class="text-right">
                <input type="submit" value="Login" class="btn btn-success" />
            </div>
        </div>
    </div>
</form>